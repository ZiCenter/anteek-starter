{
  "name": "codegen--graphql-server-nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "concurrently \"rimraf dist\" \"rimraf prisma\" \"rimraf src/__generated__\" ",
    "build": "concurrently \"npm:anteek:compile\" \"npm:nest:build\" -m 1",
    "format": "prettier --write \"**/*.ts\" \"**/*.ts\"",
    "lint": "eslint \"**/*.ts\" --fix",

    "start": "concurrently \"npm:anteek:compile\" \"npm:nest:start\" -m 1",
    "start:dev": "concurrently \"npm:anteek:compile:dev\" \"npm:nest:start:dev\"",
    "start:prod": "node dist/main",

    "nest:build": "nest build",
    "nest:start": "nest start",
    "nest:start:debug": "nest start --debug --watch",
    "nest:start:dev": "nest start --watch",

    "test": "jest",
    "test:watch": "jest --watch --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",

    "db": "npm run db:migrate && npm run db:seed",
    "db:migrate": "prisma db push",
    "db:seed": "prisma db seed",

    "anteek:prisma": "prisma format && prisma generate",
    "anteek:compile": "anteek compile src/schema.graphqls",
    "anteek:compile:dev": "anteek compile src/schema.graphqls --watch"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@prisma/client": "^4.6.1",
    "@zicenter/anteek-core": "^3.1.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/jest": "28.1.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "commander": "^9.4.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "prisma": "^4.6.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-morph": "^16.0.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "prisma": {
    "seed": "node dist/seeds/index.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": true,
    "arrowParens": "avoid"
  }
}
